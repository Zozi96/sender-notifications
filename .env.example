# Security Environment Variables
# CRITICAL: Generate a strong random API key before deploying to production!
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"

API_KEY=changeme-generate-secure-key

# CORS Configuration
# JSON array of allowed origins (your portfolio domain)
CORS_ORIGINS=["http://localhost:5173"]

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=minute

# CSRF Protection (set to false for API-only usage)
ENABLE_CSRF=false

# SMTP Settings
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=user
SMTP_PASSWORD=password
SMTP_USE_TLS=true

# Email Configuration
EMAIL_SENDER=noreply@example.com
EMAIL_RECIPIENT=you@example.com

# Application Settings
DEBUG=false
